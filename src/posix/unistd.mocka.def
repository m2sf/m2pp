DEFINITION MODULE unistd; (* MOCKA version *)

(* User-level Modula-2 interface to POSIX unistd *)
  
IMPORT unistd0; (* foreign interface *)


(* type int *)

TYPE INT = unistd0.INT;


TYPE AccessMode = INT [0..7];


CONST
  FileExists = 0; (* 0b0000 *)
  Executable = 1; (* 0b0001 *)
  Writable   = 2, (* 0b0010 *)
  Readable   = 4; (* 0b0100 *)


(* access() *)

PROCEDURE access ( path : ARRAY OF CHAR; mode : AccessMode ) : INT;


(* unlink() *)

PROCEDURE unlink ( path : ARRAY OF CHAR ) : INT;


END unistd.